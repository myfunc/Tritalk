<Window x:Class="Tritalk.Client.ViewManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tritalk.Client"
        mc:Ignorable="d"
        Title="ViewManager" Height="300" Width="300">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <DockPanel>
                <Label Width="50">Adress:</Label>
                <TextBox Name="txtAdress"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label Width="50">Port:</Label>
                <TextBox Name="txtPort"></TextBox>
            </DockPanel>
        </StackPanel>
        <Grid Name="MainView">

        </Grid>
    </DockPanel>
    
</Window>
